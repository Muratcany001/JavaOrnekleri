

import java.util.Scanner;

public class Main {

    

    public static void main(String[] args) {

        

        

   

       Scanner scan = new Scanner(System.in);

        System.out.println("Bulunduğunuz günü giriniz ,(sayi okarak))");

        

        int day = scan.nextInt();

        switch(day){

            case 1:

                System.out.println("Bacak");

                break;

                

            case 2:

                System.out.println("Sırt ön kol");

                break;

            case 3:

                System.out.println("Göğüs arka kol");

                break;

            case 4:

                System.out.println("Sırt ön kol");

                break;

           case 5:

                System.out.println("Bacak");

                break; 

            case 6:

                System.out.println("off day");

                break;

            case 7:

                System.out.println("off day");

                break;

            default:

                System.out.println("gecersiz");

        

        

            }

  

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        

